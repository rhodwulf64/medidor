<html>

<head>
    <meta charset="utf-8" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://webmedico.net/Scripts/moment.js"></script>
    <script src="https://webmedico.net/Scripts/moment-with-locales.js"></script>
    
    <style>
    body {
            font: 11px "Tahoma" !important;
        }
        
        hr {
            border-top-color: #{{ColorLines}}
        
        !important;
    }
    table.table-striped th,
    table.table-bordered th,
    table.table-striped td,
    table.table-bordered td {
        font-size: 10px;
        font-family: Tahoma;
    }
    </style>
</head>

<body class="container">
    
    <span>&nbsp;</span>
    <div class="row">
        <div class="col-xs-6">
            <h4>Procedimientos</h4>
        </div>
        <div class="col-xs-6" style="padding-top:15px">
            <span class="pull-right">
                <strong>Fecha:&nbsp;
                    <span id="DatePrint"></span>
                </strong>
            </span>
        </div>
    </div>

    <hr>
    <div width="100%">
        {{#unless PrinterHeader}}
        <div>
            <h5>
                <strong>Doctor:</strong>&nbsp; {{DoctorName}} </h5>
        </div>
        {{/unless}}
        <div>
            <h5>
                <strong>Paciente:</strong>&nbsp; {{Paciente.LastName}} {{Pacient.SecondLastName}} {{Paciente.FirstName}} {{Paciente.SecondFirstName}} </h5>
        </div>
        <hr>
    </div>


      

      <div style="padding-top:20px;" class="container">
        <table class="table table-bordered table-fit">
            <thead>
                <tr>
                    <th class="text-center">Fecha</th>
                    <th class="text-center">Procedimiento</th>
                      <th class="text-center">Equipo</th>
                    <th class="text-center">Potencia</th>
                    <th class="text-center">Tratante</th>
                    <th class="text-center">Descripcion Procedimiento</th>
                  
                </tr>
            </thead>
            <tbody>
                {{#each Procedimientos}}
                <tr >
                    <td align="center"> {{ProcedimientoDate}}</td> 
                    <td align="center"> {{DescProcedimiento}}</td>
                    <td align="center"> {{Equipo}}</td>
                    <td align="center"> {{Potencia}}</td>
                    <td align="center"> {{Tratante}}</td>
                    <td align="center"> {{Descripcion}}</td>
                 
                </tr>
                   {{/each}}
            </tbody>
        </table>
    </div>
</body>

</html>

<script>
    var now = moment().locale("es").format('dddd D MMMM YYYY');
    
    document.getElementById("DatePrint").innerHTML = now;
    
</script>