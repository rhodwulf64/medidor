<html>
    <head>    
        <meta charset="utf-8" />
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://webmedico.net/Scripts/moment.js"></script>
        <script src="https://webmedico.net/Scripts/moment-with-locales.js"></script>
        <style>
            body {
                font: 11px "Tahoma" !important;
            }
            
            hr {
                margin-top:10px !important;
                border-top-color: #{{ColorLines}} !important;
            }
            #left-column {
                float: left;
                background-color: red;
                border: 1px;
                width: 50%;
                height:inherit;
            }
            
            #right-column {
                float: left;
                width: 50%;
                background-color: blue;
                display: block;
                height:inherit;
                
            }
        </style>
    </head>
    <body>
        <span>&nbsp;</span>
        <div width="100%" style="text-align: center">
            <h4><strong>EVALUACIÓN MÉDICA</strong></h4>
        </div>
        <div class="row">
              <div class="col-xs-12" style="margin-top:10px !important;">
              <span style="white-space: pre-line;font-size:11px"><strong>FECHA:&nbsp;</strong> <span id="DatePrint"></span>
              </div>
              <div class="col-xs-6 left-column" style="margin-top:10px !important;">
              <div style="margin-top:10px !important;">
              <span style="white-space: pre-line;font-size:11px"><strong>PACIENTE:&nbsp;</strong> {{Paciente.DisplayName}}</span>
              </div>
            <div style="margin-top:10px !important;">
              <span style="white-space: pre-line;font-size:11px"><strong>DIRECCIÓN:&nbsp;</strong> {{Paciente.Address}}</span>
               </div>
               {{#if MedicoRefiere}}
                <div style="margin-top:10px !important;">
                <span style="white-space: pre-line;font-size:11px"><strong>MÉDICO QUE REFIERE:&nbsp;</strong> {{MedicoRefiere}}</span>
               </div>
               {{/if}}
           </div>
            <div class="col-xs-6 right-column" style="margin-top:10px !important;">
            <div style="margin-top:10px !important;">
            <span style="white-space: pre-line;font-size:11px"><strong>EDAD:&nbsp;</strong> {{Paciente.Edad}}</span>
            </div>
           
            <div style="margin-top:10px !important;">
            <span style="white-space: pre-line;font-size:11px"><strong>OCUPACIÓN:&nbsp;</strong> {{Paciente.Ocupacion}}</span>
            </div>
            </div>
        </div>
        <div class="row" >
            {{#if ChequeoMotivo}}
                <div class="form-group col-xs-12" style="border-bottom-color: #{{ColorLines}};border-bottom-width: 1px; border-bottom-style: solid;margin-top:15px !important;">
                    <label class="control-label">MOTIVO DE CONSULTA:</label>
                    <div class="form-group">
                        <span style="white-space: pre-line;">{{ChequeoMotivo}}</span>
                        
                    </div>
                </div>
            {{/if}}
        </div>
        <div class="row">
            {{#if ChequeoEnfermedad}}
                <div class="form-group col-xs-12" style="border-bottom-color: #{{ColorLines}} !important; border-bottom-width: 1px; border-bottom-style: solid;">
                    <label class="control-label">ENFERMEDAD ACTUAL:</label>
                    <div class="form-group" >
                        <span style="white-space: pre-line;">{{ChequeoEnfermedad}}</span>
                    </div>
                </div>
            {{/if}}
        </div>
        {{#if Personales}}
     <div class="row">
            <div class="form-group col-xs-12"  style="border-bottom-color: #{{ColorLines}} !important; border-bottom-width: 1px; border-bottom-style: solid;">
                <label class="control-label">ANTECEDENTES PERSONALES:</label>
                <div class="row">
				<div class="form-group col-xs-12">
                    {{#if Personales.Diabetes}}
                        <div class="col-xs-4">
                            <label>Diabetes:</label>
                            <div class="col-md-12">
                                <span style="white-space: pre-line;">{{Personales.DetalleDiabetes}}</span>
                            </div>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Hipertension}}
                        <div class="col-xs-4">
                            <label>Hipertensión:</label>
                            <div class="col-md-12">
                                <span style="white-space: pre-line;">{{Personales.DetalleHipertension}}</span>
                            </div>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Cancer}}
                        <div class="col-xs-4">
                            <label>Cancer:</label>
                            <div class="col-md-12">
                                <span style="white-space: pre-line;">{{Personales.DetalleCancer}}</span>
                            </div>
                        </div>
                    {{/if}}
    
                    {{#if Personales.Fuma}}
                        <div class="col-xs-4">
                            <label>Fuma:</label>
                            <div class="col-md-12">
                                <span style="white-space: pre-line;">{{Personales.DetalleFuma}}</span>
                            </div>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Alcohol}}
                        <div class="col-xs-4">
                            <label>Alcohol:</label>
                            <div class="col-md-12">
                                <span style="white-space: pre-line;">{{Personales.DetalleAlcohol}}</span>
                            </div>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Infecciosas}}
                        <div class="col-xs-4">
                            <label>Enf. Infecciosas:</label>
                            <div class="col-md-12">
                                <span style="white-space: pre-line;">{{Personales.DetalleInfecciosas}}</span>
                            </div>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.EnfermedadTiroidea}}
                        <div class="col-xs-4">
                            <label>Enf. Tiroidea:</label>
                            <div class="col-md-12">
                                <span style="white-space: pre-line;">{{Personales.DetalleEnfermedadTiroidea}}</span>
                            </div>
                        </div>
                    {{/if}}
                </div>
                <div class="row">
                    <div class="form-group col-xs-12">
                    {{#if Personales.Patologicos}}
                        <div class="col-xs-12" style="margin-top:5px;">
                            <label>
                                Antecedentes Patológicos:
                            </label>
                        </div>
                        <div class="col-xs-12">
                            <span style="white-space: pre-line;">{{Personales.Patologicos}}</span>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Medicamentos}}
                        <div class="col-xs-12" style="margin-top:10px;">
                            <label>
                                Medicamentos:
                            </label>
                        </div>
                        <div class="col-xs-12">
                            <span style="white-space: pre-line;">{{Personales.Medicamentos}}</span>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Habitos}}
                        <div class="col-xs-12" style="margin-top:10px;">
                            <label>
                                Hábitos:
                            </label>
                        </div>
                        <div class="col-xs-12">
                            <span style="white-space: pre-line;">{{Personales.Habitos}}</span>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Alergias}}
                        <div class="col-xs-12" style="margin-top:10px;">
                            <label>
                                Alergias y Alertas:
                            </label>
                        </div>
                        <div class="col-xs-12">
                            <span style="white-space: pre-line;">{{Personales.Alergias}}</span>
                        </div>
                    {{/if}}
                    
                    {{#if Personales.Cirugias}}
                        <div class="col-xs-12"style="margin-top:10px;">
                            <label>
                                Cirugías:
                            </label>
                        </div>
                        <div class="col-xs-12">
                            <span style="white-space: pre-line;">{{Personales.Cirugias}}</span>
                        </div>
                    {{/if}}
                    </div>
                </div>
                </div>
            </div>
        </div>
        {{/if}}
 <div class="row">
           <div class="form-group col-xs-12" style="border-bottom-color: #{{ColorLines}} !important; border-bottom-width: 1px; border-bottom-style: solid;">
                <label class="control-label">ANTECEDENTES FAMILIARES:</label>
                <div width="row">
                    {{#if Familiares.Diabetes}}
                    <div class="col-xs-4">
                        <span><strong>Diabetes:</strong> Si</span>
                    </div>
                    {{/if}}
                    
                    {{#if Familiares.Hipertension}}
                    <div class="col-xs-4">
                        <span><strong>Hipertensión:</strong> Si</span>
                    </div>
                    {{/if}}

                    {{#if Familiares.Cancer}}
                    <div class="col-xs-4">
                        <span><strong>Cancer:</strong> Si</span>
                    </div>
                    {{/if}}
                    
                    {{#if Familiares.CerebroVascular}}
                    <div class="col-xs-4">
                        <span><strong>Accidente Cerebrovascular:</strong> Si</span>
                    </div>
                    {{/if}}
                    
                    {{#if Familiares.EnfermadadCardiaca}}
                    <div class="col-xs-4">
                        <span><strong>Enfermedad Cardíaca:</strong> Si</span>
                    </div>
                    {{/if}}
                    
                    
                    <div class="row">
                        {{#if Familiares.Comentarios}}
                            <span class="col-xs-12"><strong>Comentarios:</strong></span>
                            <div class="col-xs-10" style="margin-top:10px !important;">
                                <span style="white-space: pre-line;">{{Familiares.Comentarios}}</span>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
   </div>
        <div class="row">
            {{#if ChequeoExamenFisico}}
                <div class=" form-group col-xs-12" style="border-bottom-color: #{{ColorLines}} !important; border-bottom-width: 1px; border-bottom-style: solid;">
                    <label class="control-label">EXÁMEN FÍSICO:</label>
                    <div class="row form-group">
                            {{#if ChequeoFC}}
                                <div class="col-xs-3">
                                    <label>FC: &nbsp;</label><span>{{ChequeoFC}}</span>
                                </div>
                            {{/if}}
                            {{#if ChequeoFR}}
                                <div class="col-xs-3">
                                    <label>FR:: &nbsp;</label><span>{{ChequeoFR}}</span>
                                </div>
                            {{/if}}
                            {{#if ChequeoSO2}}
                                <div class="col-xs-3">
                                    <label>SO2: &nbsp;</label><span>{{ChequeoSO2}}</span>
                                </div>
                            {{/if}}
                            {{#if ChequeoTA}}
                                <div class="col-xs-3">
                                    <label>TA: &nbsp;</label><span>{{ChequeoTA}}</span>
                                </div>
                            {{/if}}
                            {{#if ChequeoTemp}}
                                <div class="col-xs-3">
                                    <label>Temp: &nbsp;</label><span>{{ChequeoTemp}}</span>
                                </div>
                            {{/if}}
                            {{#if ChequeoPeso}}
                                <div class="col-xs-3">
                                    <label>Peso: &nbsp;</label><span>{{ChequeoPeso}}</span>
                                </div>
                            {{/if}}
                            {{#if ChequeoTalla}}
                                <div class="col-xs-3">
                                    <label>Talla: &nbsp;</label><span>{{ChequeoTalla}}</span>
                                </div>
                            {{/if}}
                            {{#if ChequeoIMC}}
                                <div class="col-xs-3">
                                    <label>IMC: &nbsp;</label><span>{{ChequeoIMC}}</span>
                                </div>
                            {{/if}}
                            <div class="col-xs-12"> 
                            <span style="white-space: pre-line;margin-top:1px;">{{ChequeoExamenFisico}}</span>
                             </div> 
                    </div>
                </div>
            {{/if}}
        </div>
       
        <div class="row" >
            {{#if ChequeoExamenes}}
                <div class="form-group col-xs-12" style="border-bottom-color: #{{ColorLines}} !important; border-bottom-width: 1px; border-bottom-style: solid;">
                    <label class="control-label">EXÁMENES y COMENTARIOS:</label>
                    <div class="form-group">
                        <span style="white-space: pre-line;">{{ChequeoExamenes}}</span>
                    </div>
                </div>
            {{/if}}
        </div>
        
        <div class="row">
            {{#if ChequeoDiagnostico}}
                <div class="form-group col-xs-12" style="border-bottom-color: #{{ColorLines}} !important; border-bottom-width: 1px; border-bottom-style: solid;">
                    <label class="control-label">DIAGNÓSTICO:</label>
                    <div class="form-group">
                        <span style="white-space: pre-line;">{{ChequeoDiagnostico}}</span>
                    </div>
                </div>
            {{/if}}
        </div>
        
        <div class="row">
            {{#if ChequeoRecomendaciones}}
                <div class="form-group col-xs-12">
                    <label class="control-label">RECOMENDACIONES:</label>
                   <div class="form-group">
                        <span style="white-space: pre-line;">{{ChequeoRecomendaciones}}</span>
                    </div>
                </div>
            {{/if}}
        </div>
        <div width="100%" style="text-align: center; position:relative; margin-top:225px" >
             <h4><strong><pre style="border: none;">{{DoctorCedula}}</pre></strong> </h4>
        </div>
        
        <img src="data:image/gif;base64,{{HeaderLogo}}" style="display:none;" />
        <img src="data:image/gif;base64,{{FooterLogo}}" style="display:none;" />
    </body>
</html>

<script>
    var now = moment().format('DD/MM/YYYY hh:mm A')

    document.getElementById("DatePrint").innerHTML = now;
</script>